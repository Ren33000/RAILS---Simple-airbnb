<div class="container">
  <h1 class="my-5">All our Flats </h1>
  <h4 class="my-5">All our <%= Flat.count %> flats </h4>
  
  <div class="row">
    <div class="col-4">
        <% @flats.each do |flat| %>
            <div class="card-trip">
                <img src= "<%= flat.image %>" />
                <div class="card-trip-infos">     
                    <%= link_to flat_path(flat) do %>
                        <h2><%= flat.name %></h2>
                    <% end %>
                    <p><%= flat.address %></p>
                    <h2 class="card-trip-pricing"><i class="fas fa-dollar-sign"></i><%= flat.price_per_night %></h2>
                    <h2 class="card-trip-guests"><i class="fas fa-users"></i><%= flat.number_of_guests %></h2>
                </div>
            </div>
        <% end %>
    </div>
</div>


